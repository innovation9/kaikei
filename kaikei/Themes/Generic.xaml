	<Style TargetType="{x:Type controlJMP:ButtonJMP}" BasedOn="{x:Null}">
		<Setter Property="FocusVisualStyle" Value="{DynamicResource SimpleButtonFocusVisual}"/>
		<Setter Property="Background" Value="{DynamicResource NormalBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource NormalBorderBrush}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controlJMP:ButtonJMP}">
					
					<ControlTemplate.Resources>
						<Storyboard x:Key="Activate_Focus">
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="#00F5FA9F"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="#FFF5FA9F"/>
							</ColorAnimationUsingKeyFrames>
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="#00F3FC5B"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="#FFF3FC5B"/>
							</ColorAnimationUsingKeyFrames>
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="Transparent"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="White"/>
							</ColorAnimationUsingKeyFrames>
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="#006A6A6A"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="#FF6A6A6A"/>
							</ColorAnimationUsingKeyFrames>
							<DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="imgIcon" Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)">
								<SplineDoubleKeyFrame KeyTime="00:00:00" Value="15"/>
								<SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0"/>
							</DoubleAnimationUsingKeyFrames>
						</Storyboard>
						<Storyboard x:Key="Desactivate_Focus">
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="#FFF5FA9F"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="#00F5FA9F"/>
							</ColorAnimationUsingKeyFrames>
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="#FFF3FC5B"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="#00F3FC5B"/>
							</ColorAnimationUsingKeyFrames>
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="White"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="Transparent"/>
							</ColorAnimationUsingKeyFrames>
							<ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
								<SplineColorKeyFrame KeyTime="00:00:00" Value="#FF6A6A6A"/>
								<SplineColorKeyFrame KeyTime="00:00:00.3000000" Value="#006A6A6A"/>
							</ColorAnimationUsingKeyFrames>
							<DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="imgIcon" Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)">
								<SplineDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
								<SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="15"/>
							</DoubleAnimationUsingKeyFrames>
						</Storyboard>
					</ControlTemplate.Resources>
					
					<!-- We use Grid as a root because it is easy to add more elements to customize the button -->
					<Grid x:Name="Grid">
						
						<!-- Content Presenter is where the text content etc is placed by the control -->
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="0.344*"/>
							<ColumnDefinition Width="0.8*"/>
						</Grid.ColumnDefinitions>
						<Border x:Name="Border" Padding="{TemplateBinding Padding}" Grid.ColumnSpan="2" BorderBrush="#006A6A6A" BorderThickness="1" CornerRadius="4">
							<Border.Background>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop Offset="0"/>
									<GradientStop Color="#00F9FF8B" Offset="0.996"/>
									<GradientStop Color="#00FCFFCA" Offset="0.881"/>
								</LinearGradientBrush>
							</Border.Background>
						</Border>
						
						<Image x:Name="imgIcon" HorizontalAlignment="Center" Margin="2,2,0,2" VerticalAlignment="Center" Width="25" Height="25" Source="{TemplateBinding Icon}" Stretch="Fill">
							<Image.Effect>
								<BlurEffect Radius="11"/>
							</Image.Effect>
						</Image>
						<!-- The bindings are useful so that the control can be parameterized without editing the template -->
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" Margin="0" Grid.Column="1" d:LayoutOverrides="Height"/>
					</Grid>
					
					<!--Each state sets a brush on the Border in the template -->
					<ControlTemplate.Triggers>
						<Trigger Property="IsKeyboardFocused" Value="true">
							<Trigger.EnterActions>
								<BeginStoryboard Storyboard="{StaticResource Activate_Focus}"/>
							</Trigger.EnterActions>
							<Trigger.ExitActions>
								<BeginStoryboard x:Name="Desactivate_Focus_BeginStoryboard1" Storyboard="{StaticResource Desactivate_Focus}"/>
							</Trigger.ExitActions>
							<Setter Property="BorderBrush" TargetName="Border" Value="#FF6A6A6A"/>
							<Setter Property="Background" TargetName="Border">
								<Setter.Value>
									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
										<GradientStop Color="White" Offset="0"/>
