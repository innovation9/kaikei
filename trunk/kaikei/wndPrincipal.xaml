<Window 
    x:Class="Kaikei.wndPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlsJMP="clr-namespace:ControlsWPF_JMP.Ventanas;assembly=ControlsWPF_JMP"
    Title="Kaikei - Sistema de contabilidad General y Contabilidad de Costos" Height="700" Width="900" WindowStartupLocation="CenterScreen" WindowState="Maximized" MinWidth="900" MinHeight="700">
    <Grid>
    	<Menu x:Name="menu_Principal" Margin="0" Style="{DynamicResource SimpleMenu}" VerticalAlignment="Top" Height="42">
			<Menu.Background>
				<ImageBrush ImageSource="pack://application:,,,/kaikei;component/Themes/imgPanelTitulos.jpg" />
			</Menu.Background>
    		<MenuItem x:Name="mnu_tit_ContaGral" Margin="0" Style="{DynamicResource SimpleMenuItem}" Header="Contabilidad General" FontFamily="{DynamicResource FontTituloMenu}" FontSize="{DynamicResource FontTituloMenu_Tamaño}" FontWeight="{DynamicResource FontTituloMenu_Estilo}">
    			<MenuItem.Icon>
    				<Image>
    					<Image.Source>
    						<BitmapImage UriSource="/kaikei;component/Themes/mnu_ContabilidadGral.png" />
    					</Image.Source>
    				</Image>
    			</MenuItem.Icon>
    		</MenuItem>
    		<MenuItem x:Name="mnu_tit_ContaCosto" Margin="0" Style="{DynamicResource SimpleMenuItem}" FontFamily="{DynamicResource FontTituloMenu}" FontSize="{DynamicResource FontTituloMenu_Tamaño}" FontWeight="{DynamicResource FontTituloMenu_Estilo}" Header="Contabilidad Costos">
    			<MenuItem.Icon>
    				<Image>
    					<Image.Source>
    						<BitmapImage UriSource="/kaikei;component/Themes/mnu_ContabilidadCostos.png" />
    					</Image.Source>
    				</Image>
    			</MenuItem.Icon>
    		</MenuItem>
    		<MenuItem x:Name="mnu_tit_Inventario" Margin="0" Style="{DynamicResource SimpleMenuItem}" FontFamily="{DynamicResource FontTituloMenu}" FontSize="{DynamicResource FontTituloMenu_Tamaño}" FontWeight="{DynamicResource FontTituloMenu_Estilo}" Header="Inventario">
    			<MenuItem.Icon>
    				<Image>
    					<Image.Source>
    						<BitmapImage UriSource="/kaikei;component/Themes/mnu_Inventario.png" />
    					</Image.Source>
    				</Image>
    			</MenuItem.Icon>
    		</MenuItem>
    		<MenuItem x:Name="mnu_tit_Planilla" Margin="0" Style="{DynamicResource SimpleMenuItem}" Header="Planilla" FontFamily="{DynamicResource FontTituloMenu}" FontSize="{DynamicResource FontTituloMenu_Tamaño}" FontWeight="{DynamicResource FontTituloMenu_Estilo}">
    			<MenuItem.Icon>
    				<Image>
    					<Image.Source>
    						<BitmapImage UriSource="/kaikei;component/Themes/mnu_Empleados.png" />
    					</Image.Source>
    				</Image>
    			</MenuItem.Icon>
    		</MenuItem>
    		<MenuItem x:Name="mnu_tit_EstadosF" Margin="0" Style="{DynamicResource SimpleMenuItem}" FontFamily="{DynamicResource FontTituloMenu}" FontSize="{DynamicResource FontTituloMenu_Tamaño}" FontWeight="{DynamicResource FontTituloMenu_Estilo}" Header="Reportes">
    			<MenuItem.Icon>
    				<Image>
    					<Image.Source>
    						<BitmapImage UriSource="/kaikei;component/Themes/mnu_EstadosFinancieros.png" />
    					</Image.Source>
    				</Image>
    			</MenuItem.Icon>
    		</MenuItem>
    		<MenuItem x:Name="mnu_tit_Ayuda" Margin="0" Style="{DynamicResource SimpleMenuItem}" FontFamily="{DynamicResource FontTituloMenu}" FontSize="{DynamicResource FontTituloMenu_Tamaño}" FontWeight="{DynamicResource FontTituloMenu_Estilo}" Header="Ayuda">
    			<MenuItem.Icon>
    				<Image>
    					<Image.Source>
    						<BitmapImage UriSource="/kaikei;component/Themes/mnu_Ayuda.png" />
    					</Image.Source>
    				</Image>
    			</MenuItem.Icon>
    		</MenuItem>
    	</Menu>
        
    </Grid>
</Window>
